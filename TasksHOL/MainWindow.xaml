<Window x:Class="HOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tasks HOL" Height="240" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*" />
            <ColumnDefinition Width="240*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DataGrid Grid.ColumnSpan="2" Margin="10,10,10,0" HorizontalAlignment="Stretch" Name="listBoxStatus" VerticalAlignment="Stretch" IsReadOnly="True" />
        <Button Content="Start" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Name="buttonStart" Width="75" Click="buttonStart_Click" Grid.Row="1" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Name="buttonStop" Width="75" Click="buttonStop_Click" Grid.Row="1" Grid.Column="1" IsEnabled="False" />
    </Grid>
</Window>
